@model BugSmasher3000.ViewModels.EditUserViewModel


@{ 
    ViewBag.Title = "Edit User";
}

<div class="container-fluid">

    <!-- Page Heading -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Edit User</h1>
    </div>

    <!-- Edit User Card-->
    <div class="card shadow mb-4 w-50">
        <div class="card-header py-3 bg-gray-500">
            <h6 class="m-0 font-weight-bold text-white">User:</h6>
        </div>
        <div class="card-body">
            <form method="post" class="mt-3">
                <div class="form-group row">
                    <label asp-for="Id" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <input asp-for="Id" disabled class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="Email" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="UserName" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <input asp-for="UserName" class="form-control" />
                        <span asp-validation-for="UserName" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="FName" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <input asp-for="FName" class="form-control" />
                        <span asp-validation-for="FName" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="LName" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <input asp-for="LName" class="form-control" />
                        <span asp-validation-for="LName" class="text-danger"></span>
                    </div>
                </div>

                <div asp-validation-summary="All" class="text-danger"></div>

                <div class="form-group row">
                    <div class="col-sm-10">
                        <button type="submit" class="btn btn-primary">Update</button>
                        <a asp-action="Users" class="btn btn-primary">Cancel</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
        <!-- User's Roles Card -->
        <div class="card shadow mb-4 w-50">
            <div class="card-header py-3 bg-gray-500">
                <h6 class="m-0 font-weight-bold text-white">User's Roles</h6>
            </div>
            <div class="card-body">
                @if (Model.Roles.Any())
                {
                    foreach (var role in Model.Roles)
                    {
                        <h5 class="card-title">@role</h5>
                    }
                }
                else
                {
                    <h5 class="card-title">No Roles Assigned To User</h5>
                }
            </div>
            <div class="card-footer">
                <a asp-action="ManageUserRoles" asp-route-userId="@Model.Id" style="width:auto" class="btn btn-primary">
                    Manage Roles
                </a>
            </div>
        </div>

        <!-- User's Claims Card -->
        <div class="card shadow mb-4 w-50">
            <div class="card-header py-3 bg-gray-500">
                <h6 class="m-0 font-weight-bold text-white">User's Claims</h6>
            </div>
            <div class="card-body">
                @if (Model.Claims.Any())
                {
                    foreach (var claim in Model.Claims)
                    {
                        <h5 class="card-title">@claim</h5>
                    }
                }
                else
                {
                    <h5 class="card-title">None At The Moment</h5>
                }
            </div>
            <div class="card-footer">
                <a href="#" style="width:auto" class="btn btn-primary">
                    Manage Claims
                </a>
            </div>
        </div>
</div>

